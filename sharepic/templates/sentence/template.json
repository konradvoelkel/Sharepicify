{
  "name": "Sentence",
  "root": "https://toolpic.fridaysforfuture.de/sharepic/templates/sentence/template.json",
  "preview": "sharepic/templates/sentence/preview.jpg",
  "documents": [
    {
      "width": 1200,
      "height": 1200,
      "src": "sharepic/templates/sentence/1200x1200.svg",
      "alias": "Facebook, Instagram"
    },
    {
      "width": 1200,
      "height": 675,
      "src": "sharepic/templates/sentence/1200x675.svg",
      "alias": "Twitter"
    }
  ],
  "fonts": [
    {
      "name": "Jost",
      "src": "fonts/jost.ttf",
      "mime": "font/truetype"
    },
    {
      "name": "Jost-900",
      "src": "fonts/Jost/Jost-900-Black.ttf",
      "mime": "font/truetype"
    },
    {
      "name": "Jost-300",
      "src": "fonts/Jost/Jost-300-Light.ttf",
      "mime": "font/truetype"
    },
    {
      "name": "Jost-200",
      "src": "fonts/Jost/Jost-200-Thin.ttf",
      "mime": "font/truetype"
    },
    {
      "name": "Merriweather",
      "src": "fonts/Merriweather Sans.ttf",
      "mime": "font/truetype"
    }
  ],
  "fields": [
    {
      "type": "selection",
      "description": "Background",
      "key": "backgroundImage",
      "default": {
        "value": "sharepic/templates/sentence/default.jpg"
      },
      "properties": {
        "items": [
          {
            "type": "file"
          }
        ]
      }
    },
    {
      "type": "number",
      "description": "Position",
      "key": "pos",
      "default": 0,
      "properties": {
        "value": 0,
        "max": 1,
        "min": -1,
        "step": 0.05,
        "kind": "slider"
      }
    },
    {
      "type": "text",
      "description": "Title",
      "key": "title",
      "default": ["WORLD", "WHALE", "DAY"],
      "properties": {

      }
    },
    {
      "type": "line",
      "description": "Subtitle",
      "key": "subtitle",
      "default": "TODAYS IS",
      "properties": {

      }
    },
    {
      "type": "line",
      "description": "Info Text",
      "key": "info",
      "default": "www.fridaysforfuture.de   #fridaysforfuture",
      "properties": {

      }
    }
  ]
}
